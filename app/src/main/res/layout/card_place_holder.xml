<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txt_title_place_holder">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_place_holder"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_150dp"
            android:backgroundTint="@color/gray"
            android:elevation="@dimen/dimen_6dp"
            app:cardCornerRadius="@dimen/dimen_6dp"
            app:cardElevation="@dimen/dimen_6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/text_place_holder"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@color/gray"
            app:layout_constraintEnd_toEndOf="@+id/card_place_holder"
            app:layout_constraintStart_toStartOf="@+id/card_place_holder"
            app:layout_constraintTop_toBottomOf="@+id/card_place_holder" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>